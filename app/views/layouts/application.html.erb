<!DOCTYPE html>
<html>
<head>
  <title>Paleohacks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

 <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "PaleoHacks", root_path, class: "navbar-brand" %> <p class="navbar-text">by nixmaldonado</p>
          </div>
          <% if current_user %>
            <p class="navbar-text navbar-right">Logged in as <strong> <%= current_user.email %> </strong></p>
            <%= link_to "Log out",    destroy_user_session_path, method: :delete, class: "btn btn-danger navbar-btn pull-right" %>
            <% else %>
              <%= link_to "Sign up",     new_user_registration_path, class: "btn btn-success navbar-btn pull-right" %>
              <%= link_to "Log In", user_session_path, class: "btn btn-success navbar-btn pull-right" %>
            <% end -%>
            </div>
            </nav>


<%= yield %>

</body>
</html>
