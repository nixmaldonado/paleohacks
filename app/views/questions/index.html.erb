<%= link_to "Have a Question?", new_question_path %>


<hr>

<% @questions.each do |question|%>
  <strong>
    <%= link_to "#{question.title}", question_path(question)  %>
  </strong>
  <%= question.body %>
  <% t = @topic.find("#{question.id}") %>
  <%= link_to "#{t.topic.name}", topic_path(t.topic.id) %>
  <hr>
<% end -%>
